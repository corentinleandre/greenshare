<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/baseline_keyboard_return_24" />
        <EditText
            android:id="@+id/bureauEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:hint="Bureau / où peut-on vous trouver facilement"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/telephoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:hint="Téléphone (non obligatoire)"
            android:background="@drawable/border"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <ImageButton
            android:id="@+id/delTelephoneButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:src="@drawable/red_close_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingsAdmin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attribution des droits"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Ajouter un modérateur :"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/moderatorAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/border"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Supprimer un modérateur :"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/moderatorDelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/border"
                android:padding="5dp"
                android:textColorHint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Ajouter un admin :"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/adminAddText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/border"
                android:padding="5dp"
                android:textColorHint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Supprimer un admin :"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/adminDelText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/border"
                android:padding="5dp"
                android:textColorHint="@color/white"/>
    </LinearLayout>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:backgroundTint="#25985C"/>
    </LinearLayout>
