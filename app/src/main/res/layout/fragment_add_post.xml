<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="207dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:baselineAlignBottom="false"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleArea"
            android:layout_width="270dp"
            android:layout_height="60dp"

            android:background="@drawable/border"
            android:hint="Add a title"
            android:paddingHorizontal="12dp"
            android:textColorHint="#4A4F47" />

        <ImageButton
            android:id="@+id/add_pic"
            android:layout_width="46dp"
            android:layout_height="43dp"


            android:background="@null"
            android:onClick="pickedPhoto"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/baseline_image_search_24" />

        <ImageButton
            android:id="@+id/add_vid"
            android:layout_width="46dp"
            android:layout_height="43dp"

            android:background="@null"
            android:onClick="pickedPhoto"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/add_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.347"
            app:srcCompat="@drawable/img_2" />
    </LinearLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/Audience"
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/border"
        android:hint="Set Audience"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleArea"
        app:layout_constraintVertical_bias="0.087"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:drawablePadding="30dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contentArea"
        android:layout_width="362dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/border"
        android:hint="Write your publication"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Audience"
        app:layout_constraintVertical_bias="0.087" />

    <LinearLayout
        android:id="@+id/mediaLayout"
        android:layout_width="409dp"
        android:layout_height="105dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836"
        tools:ignore="MissingConstraints"></LinearLayout>

    <Button
        android:id="@+id/postbtn"
        android:layout_width="152dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:backgroundTint="#7FDA48"
        android:layout_marginTop="10dp"
        android:text="Share"
        android:textColor="@color/black"
        android:textColorHint="#87EB4B"
        android:textSize="21dp"
        android:textStyle="bold" />

</LinearLayout>
