<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:background="#834DAC67"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">
    // an icon is set inplace of the pic//

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="109dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="19dp"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"
        android:src="@drawable/ameen" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:baselineAligned="false"
        android:text="John Doe"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEFEFEFE"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/linearLayout3">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_info_24"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="212dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="62dp" />

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Info:"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="52dp"
                    tools:layout_editor_absoluteY="252dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="176dp" />

                <TextView
                    android:id="@+id/user_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="role: "
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="304dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="39dp" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: john.doe@uha.fr"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="328dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="184dp" />

                <TextView
                    android:id="@+id/user_bureau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bureau : 304 "
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="352dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="103dp" />

                <TextView
                    android:id="@+id/user_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fillier:"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="376dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="42dp" />

                <TextView
                    android:id="@+id/user_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="numero : USA"
                    android:textSize="18sp"
                    tools:layout_conversion_absoluteHeight="24dp"
                    tools:layout_editor_absoluteY="400dp"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_conversion_absoluteWidth="109dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Posts"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:text="Posts:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Post title :  "
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:src="@tools:sample/avatars" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>
