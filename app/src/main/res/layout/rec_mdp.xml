<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#303030"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="157dp"
        android:layout_height="148dp"
        android:layout_marginTop="40dp"
        android:cropToPadding="false"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/password_recovery"
        android:layout_width="376dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Password Recovery"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailrecovery"
        android:layout_width="338dp"
        android:layout_height="71dp"
        android:background="@drawable/border"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/baseline_mail_outline_24"
        android:drawablePadding="20dp"
        android:hapticFeedbackEnabled="true"
        android:hint="Email"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/reset"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#25985C"
        android:text="send me a recovery mail" />

    <Button
        android:id="@+id/return_to_login"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#25985C"
        android:text="return to login page" />
</LinearLayout>